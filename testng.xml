<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="book-flight-module">

    <test verbose="2" preserve-order="true" name="book flight 1">
        <parameter name="noOfPassengers" value="1"/>
        <parameter name="expectedPrice" value="$584 USD"/>
        <classes>

            <class name="com.newtours.tests.BookFlightTest">
                <methods>
                    <include name="registrationPage"/>
                    <include name="registrationConfirmationPage"/>
                    <include name="flightDetailsPage"/>
                    <include name="findFlightPage"/>
                    <include name="flightConfPage"/>
